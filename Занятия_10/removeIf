#include <iostream>
#include <forward_list>
#include<functional>

int removeIf(std::forward_list<int>& list , std::function<bool(int)> func ) { //it is bool function and he takes a int types of arguments
     
   int after_size = 0;
   
   list.remove_if(func);
   
   for(int elem : list) after_size++;
   
   return after_size;
}  
void printList(std::forward_list<int>& list) {
    
    for (int elem : list) {
        std::cout << elem << " ";
    }
    
}

bool isEven(int n) {
    return (n % 2) == 0;
}
int main() {
   
   std::forward_list<int> fl1 = {1, 3, 5, 5, 6, 6, 3, 6, 3, 5, 2};
   int remove_element = removeIf(fl1,isEven);
   
   std::cout << remove_element;
return 0;
}
