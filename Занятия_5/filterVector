#include <iostream>
#include <vector>
template<typename T , typename Function>
std::vector<T> filterVector(std::vector<T>& vec , Function func) {
    std::vector<int> result;
    for (T& element : vec) {
        if (func(element)) {
            result.push_back(element);
        }
    }
    return result;
}
template<typename T>
bool isEven(T number) {
    return number % 2 == 0;
}
int main()
{    std::vector<int> vec = { 4 , 5, 2, 5, 2, 5 , 8 };
     std::vector evenNumbers = filterVector<int>(vec , isEven<int> );
     for (int el : evenNumbers) {
         std::cout << el << ' ';
     }
    
    
    return 0;
}
